{
  "name": "grabshotgun-front",
  "version": "0.0.1",
  "scripts": {
    "start": "npm run build:link && concurrently \"npm run scss:w\" \"npm run tsc:w\" \"npm run lite\" \"npm run copyStatic\"",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "scss:w": "sass --watch ./src/app/templates/styles:./build/app/templates/styles/",
    "copyStatic": "cp -vfR ./src/app/static ./build/static && cp -vfR ./src/index.html ./build/index.html",
    "lite": "lite-server -c ./bs-config.json",
    "build:link": "mkdir -p ./build &&  ln -s ../node_modules build/node_modules",
    "typings": "typings",
    "postinstall": "typings install"
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-beta.13",
    "systemjs": "0.19.25",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "zone.js": "0.6.6"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "lite-server": "^2.1.0",
    "typescript": "^1.8.9",
    "typings":"^0.7.11"
  }
}
